{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "balance": {
            "type": "number",
            "description": "The user's current account balance."
        }
      },
      "required": [
        "displayName",
        "email"
      ]
    },
    "Post": {
      "title": "Post",
      "description": "Represents a blog post.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "excerpt": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "imageHint": {
          "type": "string"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "avatarUrl": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "category": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title",
        "slug",
        "content",
        "author",
        "date",
        "category"
      ]
    },
    "AdCampaign": {
      "title": "Ad Campaign",
      "description": "Represents a generated ad campaign.",
      "type": "object",
      "properties": {
        "productName": {
          "type": "string"
        },
        "productDescription": {
          "type": "string"
        },
        "targetAudience": {
          "type": "string"
        },
        "headline": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "active",
            "paused",
            "completed"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "productName",
        "headline",
        "body",
        "status",
        "createdAt"
      ]
    },
    "Query": {
      "title": "User Query",
      "description": "Represents a query submitted by a user to the smart assistant.",
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "The user's question."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["query", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information about a user."
    },
    "/posts/{postId}": {
      "schema": {
        "$ref": "#/entities/Post"
      },
      "description": "Stores blog posts."
    },
    "/users/{userId}/campaigns/{campaignId}": {
      "schema": {
        "$ref": "#/entities/AdCampaign"
      },
      "description": "Stores ad campaigns created by a user."
    },
    "/queries/{queryId}": {
        "schema": {
            "$ref": "#/entities/Query"
        },
        "description": "Stores queries made to the smart assistant."
    }
  }
}
